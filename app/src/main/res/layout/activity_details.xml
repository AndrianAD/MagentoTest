<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".Activity.DetailsActivity">


    <ImageView android:layout_width="300dp"
               android:layout_height="300dp" tools:layout_editor_absoluteY="162dp"
               tools:layout_editor_absoluteX="64dp"
               android:layout_margin="30dp"
               android:id="@+id/imageView_details"
               app:layout_constraintTop_toBottomOf="@id/tv_price_details"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name_details"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:text="Name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_details"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_name_details"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_details"
            tools:text="PRICE"/>
    <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_details"
            android:id="@+id/button_edit"/>

    <Button
            android:text="categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_edit"
            android:id="@+id/button_categorie"/>


</android.support.constraint.ConstraintLayout>